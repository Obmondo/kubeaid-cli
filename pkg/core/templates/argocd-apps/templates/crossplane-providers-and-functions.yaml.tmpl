apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  labels:
    kubeaid.io/version: "{{ .KubeaidFork.Version }}"
    kubeaid.io/managed-by: "kubeaid"
    kubeaid.io/priority: "default"
  name: crossplane-providers-and-functions
  namespace: argocd
spec:
  destination:
    namespace: crossplane
    server: https://kubernetes.default.svc
  sources:
    - repoURL: {{ .KubeaidFork.URL }}
      path: argocd-helm-charts/crossplane-providers-and-functions
      targetRevision: {{ .KubeaidFork.Version }}
      helm:
        valueFiles:
          - $values/k8s/{{ .KubeaidConfigFork.Directory }}/argocd-apps/values-crossplane-providers-and-functions.yaml
    - repoURL: {{ .KubeaidConfigFork.URL }}
      targetRevision: HEAD
      ref: values
  project: kubeaid
  syncPolicy:
    syncOptions:
      - CreateNamespace=true
      - ApplyOutOfSyncOnly=true
