apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  labels:
    kubeaid.io/version: {{ .KubeaidFork.Version }}
    kubeaid.io/managed-by: kubeaid
    kubeaid.io/sync-order: "10"
  name: capi-cluster
  namespace: argocd
spec:
  destination:
    namespace: {{ .CAPIClusterNamespace }}
    server: https://kubernetes.default.svc
  sources:
    - repoURL: {{ .KubeaidFork.URL }}
      path: argocd-helm-charts/capi-cluster
      targetRevision: {{ .KubeaidFork.Version }}
      helm:
        valueFiles:
          - $values/k8s/{{ .KubeaidConfigFork.Directory }}/argocd-apps/values-capi-cluster.yaml
    - repoURL: {{ .KubeaidConfigFork.URL }}
      targetRevision: HEAD
      ref: values
  project: kubeaid
  syncPolicy:
    syncOptions:
      - CreateNamespace=true
      - ApplyOutOfSyncOnly=true
  ignoreDifferences:
    - group: cluster.x-k8s.io
      kind: MachineDeployment
      jsonPointers:
        - /spec/replicas
    {{- if .HetznerConfig}}

    {{- if eq .HetznerConfig.Mode "bare-metal" }}
    - group: infrastructure.cluster.x-k8s.io
      kind: HetznerCluster
      jsonPointers:
        - /spec/controlPlaneEndpoint/host
    {{- end }}

    {{- if or (eq .HetznerConfig.Mode "bare-metal") (eq .HetznerConfig.Mode "hybrid") }}
    {{/* After the disks are wiped, CAPH removes the annotation. */}}
    - group: infrastructure.cluster.x-k8s.io
      kind: HetznerBareMetalHost
      jsonPointers:
        - /metadata/annotations/capi.syself.com~1wipe-disk
    {{- end }}

    {{- end }}
