apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  labels:
    kubeaid.io/version: "{{ .KubeaidFork.Version }}"
    kubeaid.io/managed-by: "kubeaid"
    kubeaid.io/priority: "default"
  name: crossplane
  namespace: argocd
spec:
  destination:
    namespace: crossplane
    server: https://kubernetes.default.svc
  sources:
    - repoURL: {{ .KubeaidFork.ParsedURL.GetHttpCloneURL }}
      path: argocd-helm-charts/crossplane
      targetRevision: {{ .KubeaidFork.Version }}
      helm:
        valueFiles:
          - $values/k8s/{{ .KubeaidConfigFork.Directory }}/argocd-apps/values-crossplane.yaml
    - repoURL: {{ .KubeaidConfigFork.ParsedURL.GetHttpCloneURL }}
      targetRevision: HEAD
      ref: values
  project: kubeaid
  syncPolicy:
    syncOptions:
      - CreateNamespace=true
      - ApplyOutOfSyncOnly=true
